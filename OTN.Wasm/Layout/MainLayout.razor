@inherits LayoutComponentBase

<div class="app-layout @( _isDarkMode ? "dark-mode" : "light-mode")">

    <header class="app-header">
        <h2>OTN.Wasm</h2>
        <div class="spacer"></div>
        <label class="switch">
            <input type="checkbox" @bind="_isDarkMode" />
            <span class="slider"></span>
        </label>
        <span>@(_isDarkMode ? "Dark" : "Light") Mode</span>
    </header>

    <main class="app-main-content">
        <div class="container medium-width">
            @Body
        </div>
    </main>

</div>

@code {
    private bool _isDarkMode = true;
}